<% layout('/layouts/boilerplate') %>
    <div class="row mt-3">
        <a href="/admin/kolegiji">
            <svg xmlns="http://www.w3.org/2000/svg" width="42" height="42" fill="currentColor"
                class="bi bi-arrow-left-square-fill" viewBox="0 0 16 16">
                <path
                    d="M16 14a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2zm-4.5-6.5H5.707l2.147-2.146a.5.5 0 1 0-.708-.708l-3 3a.5.5 0 0 0 0 .708l3 3a.5.5 0 0 0 .708-.708L5.707 8.5H11.5a.5.5 0 0 0 0-1" />
            </svg>
        </a>
        <div class="col-md-6 col-12 mt-3">
            <h1 class="text-primary">
                <%= student.prezime %>
            </h1>
            <h5 class="mb-4">
                <%= student.ime %>
            </h5>
            <h5>Osobni podaci:</h5>
            <div class="list-group mb-4">
                <div class="list-group-item">Id: <%= student._id %></div>
                <div class="list-group-item">Dob: <%= student.dob %></div>
                <div class="list-group-item">Status: <%= student.status %></div>
            </div>

            <div class="d-flex flex-wrap">
                <a class="btn btn-primary me-2 mb-2" href="/admin/studenti/edit/<%= student._id %>">Uredi</a>
                <form action="/admin/studenti/<%= student._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger mb-2">Obrisi</button>
                </form>
            </div>

        </div>
        

    </div>