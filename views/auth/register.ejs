<% layout('layouts/boilerplate')%>
<h1 class="text-center my-4">Registracija</h1>
<!-- Nav tabs -->
<ul class="nav nav-tabs justify-content-center bg-secondary tabLinks" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active tabButton m-1" id="form1-tab" data-bs-toggle="tab" data-bs-target="#form1" type="button" role="tab" aria-controls="form1" aria-selected="true">Student</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link tabButton m-1" id="form2-tab" data-bs-toggle="tab" data-bs-target="#form2" type="button" role="tab" aria-controls="form2" aria-selected="false">Admin</button>
    </li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
    <div class="tab-pane fade show active tabBody" id="form1" role="tabpanel" aria-labelledby="form1-tab">
        
        <form class="mt-4 bg-secondary text-white w-50 mx-auto form-control p-3 needs-validation" action="/auth/registerStudent" method="POST" novalidate>
            <div class="mb-2">
                <label for="naziv">Ime:</label>
                <input class="form-control" type="text" name="ime" id="ime" required>           
            </div>
            <div class="mb-3">
                <label for="naziv">Prezime:</label>
                <input class="form-control" type="text" name="prezime" id="prezime" required>   
            </div>
            <div class="mb-3">
                <label for="naziv">Email:</label>
                <input class="form-control" type="email" name="email" id="email" required>   
            </div>
            <div class="mb-3">
                <label for="naziv">Dob:</label>
                <input class="form-control" type="text" name="dob" id="dob" required>   
            </div>
            <div class="mb-3">
                <label for="naziv">Status:</label>
                <input class="form-control" type="text" name="status" id="status" required>   
            </div>
            <div class="mb-3">
                <label for="naziv">Korisničko ime:</label>
                <input class="form-control" type="text" name="username" id="username" required>   
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Lozinka: </label>
                <input class="form-control" type="password" id="password" name="password" required>
                
            </div>
            
            <div class="d-flex justify-content-center">
                <button class="btn btn-primary me-2">Dodaj studenta</button>
                
            </div>
        </form>
    </div>
    <div class="tab-pane fade tabBody" id="form2" role="tabpanel" aria-labelledby="form2-tab">
        <form class="mt-4 bg-secondary text-white w-50 mx-auto form-control p-3 needs-validation" action="/auth/registerAdmin" method="POST" novalidate>
            <div class="mb-2">
                <label for="ime">Ime:</label>
                <input class="form-control" type="text" name="ime" id="ime" required>           
            </div>
            <div class="mb-3">
                <label for="prezime">Prezime:</label>
                <input class="form-control" type="text" name="prezime" id="prezime" required>   
            </div>
            <div class="mb-3">
                <label for="email">Email:</label>
                <input class="form-control" type="email" name="email" id="email" required>   
            </div>
            
            <div class="mb-3">
                <label for="username">Korisničko ime:</label>
                <input class="form-control" type="text" name="username" id="username" required>   
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Lozinka: </label>
                <input class="form-control" type="password" id="password" name="password" required>               
            </div>
            
            <div class="d-flex justify-content-center">
                <button class="btn btn-primary me-2">Dodaj admina</button>   
            </div>
        </form>
    </div>
</div>





